{% set cardtextattributes = create_attribute() %}
{% set classes = [
    'relative',
    'group',
    'flex',
    'flex-col',
    'text-center',
    'h-full',
    'place-content-center',
    'place-items-center',
    color ? color: 'bg-ubc-blue bg-dark',
    customClasses,
  ]
%}

<article{{ cardtextattributes.addClass(classes) }}>
  <h3 class="px-4 mt-0 font-normal uppercase h4">
    {{ title }}
  </h3>
  <a class="inline-block px-4 mt-2 text-xs bg-transparent border-white link-expand unit-button unit-button--transparent" href="{{ link }}" aria-label="{{ title }}"{% if target %} target="_blank"{% endif %}>
    {{ linkText}}
  </a>
</article>
